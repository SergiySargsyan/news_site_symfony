{% extends 'AppBundle:Admin/Default:index.html.twig' %}

{% block body %}
    <br>
    <a href="{{ path('admin_category_add') }}" class="btn btn-success">Add new category</a>
    <br>
    <br>
    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Limitation</th>
            <th>Action</th>
        </tr>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    {% if category.limitation %}
                        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                    {% else %}
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('admin_category_edit',{id: category.id}) }}"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span>Edit</a>
                    <a href="{{ path('admin_category_delete', {id: category.id}) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span>Delete</a>
                </td>
            </tr>

        {% endfor %}
    </table>
{% endblock %}
