<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="{{ asset('favicon.ico') }}">

    <title>Starter Template for Bootstrap</title>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <!-- Bootstrap core CSS -->
    <link href="{{ asset('bundles/app/css/bootstrap.min.css') }}" rel="stylesheet">


    <!-- Custom styles for this template -->
    <link href="{{ asset('bundles/app/css/style.css') }}" rel="stylesheet">

</head>

<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('admin_index') }}">Admin page</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li {% if (path('admin_index')== app.request.getRequestUri() ) %}{{ 'class="active"' }}{% endif %}>
                    <a href="{{ path('admin_index') }}">Головна</a>
                </li>
                <li {% if (path('admin_category_index')== app.request.getRequestUri() ) %}{{ 'class="active"' }}{% endif %}>
                    <a href="{{ path('admin_category_index') }}">Категорії</a>
                </li>
                <li {% if (path('admin_tag_index')== app.request.getRequestUri() ) %}{{ 'class="active"' }}{% endif %}>
                    <a href="{{ path('admin_tag_index') }}">Теги</a>
                </li>
                <li {% if (path('admin_news_index')== app.request.getRequestUri() ) %}{{ 'class="active"' }}{% endif %}>
                    <a href="{{ path('admin_news_index') }}">Новини</a>
                </li>
                <li {% if (path('admin_comment_index')== app.request.getRequestUri() ) %}{{ 'class="active"' }}{% endif %}>
                    <a href="{{ path('admin_comment_index') }}">Коментарі</a>
                </li>
                <li><a href="{{ path('admin_test') }}">test</a></li>
                {#<li><a href="#contact">Реєстрація</a></li>#}
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>


<div class="container">

    {% for flash in app.session.flashbag.get('success') %}
        <div class="alert alert-success" role="alert">{{ flash }}</div>
    {% endfor %}

    {% for flash in app.session.flashbag.get('fail') %}
        <div class="alert alert-danger" role="alert">{{ flash }}</div>
    {% endfor %}

    {% block body %}
        <h1 align="center">Admin Page</h1>
        {{ dump(app.user) }}
        {{ dump(is_granted('ROLE_USER',app.user)) }}
    {% endblock %}
</div>





